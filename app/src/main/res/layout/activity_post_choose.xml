<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/forumBackgroundHolder"
        android:layout_weight="5"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@color/CustomGray"
            android:id="@+id/imageView" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvForumTitle"
            android:textColor="#ffffffff"
            android:textSize="24sp"
            android:background="#00000000"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/forumPostlistHolder"
        android:layout_weight="1">
        <cn.jeeper41.jeeper.wiget.RefreshListView
            android:id="@+id/lvPostChoose"
            android:divider="#05000000"
            android:dividerHeight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        </cn.jeeper41.jeeper.wiget.RefreshListView>
    </LinearLayout>
</LinearLayout>